{
  "title": "Vim Mac",
  "rules": [
    {
      "description": "Capslock to control/esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            },
	    {
	      "select_input_source": {
		"language": "en"
              }
	    }
          ]
        }
      ]
    }
  ]
}
